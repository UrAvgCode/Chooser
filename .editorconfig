# https://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
max_line_length = 140

charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{java,kt,kts,xml,gradle}]
indent_size = 4

[*.md]
trim_trailing_whitespace = false
max_line_length = unset
